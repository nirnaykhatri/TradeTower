# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Authentication (Azure AD B2C)
# REQUIRED: You must provide values for these in your .env file
AZURE_AD_B2C_TENANT_ID=
AZURE_AD_B2C_CLIENT_ID=

# Client URL (for CORS)
NEXTAUTH_URL=http://localhost:3000

# Security (Key Vault)
# Pattern: https://kv-<shortAppName>-<env>-<uniqueSuffix>.vault.azure.net/
# Example: https://kv-tradingpla-dev-abcdef.vault.azure.net/
KEY_VAULT_URL=

# Configuration (App Configuration)
# Pattern: https://appcs-<appName>-<env>-<uniqueSuffix>.azconfig.io
# Example: https://appcs-trading-platform-dev-abcdef.azconfig.io
APP_CONFIG_ENDPOINT=

# Monitoring
# Found in Azure Portal > Application Insights > Overview > Connection String
APPINSIGHTS_CONNECTION_STRING=
